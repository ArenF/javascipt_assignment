<style>
    .header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        padding: 20px 100px;
        background: rgba(255, 255, 255, 0.3);
        display: flex;
        justify-content: space-between;
        align-items: center;
        z-index: 100;
    }

    .logo {
        width: 200px;
        height: 110px;
    }

    .navbar {
        padding-right:120px;
    }

    .navbar a {
        position: relative;
        font-size: 22px;
        color: #fff;
        font-weight: 500px;
        text-decoration: none;
        margin-left: 40px;
        text-shadow: 2px 6px 1px #000;
        /*
            background_image - color #000, text-shadow #B9B4C7
            background_image(2) - color #fff, text-shadow #000
        */
    }

    .navbar a::before {
        content: '';
        position: absolute;
        top: 100%;
        left: 0;
        width: 0;
        height: 2px;
        background: #000;
        transition: .3s;
        /*
        background_image - background: #000;
        */
    }

    .navbar a:hover::before {
        width: 100%;
    }

    .textJS {
        position: absolute;
        top: 10px;
        right: 10px;
        border: 4px solid black;
    }
</style>
<header class="header">
    <a href="/">
        <img src="/images/java.png" style="-webkit-user-drag: none;" class="logo" href>
    </a>
    <nav class="navbar">
        <a class="nav" href="/">Home</a>
        <a class="nav" href="/table">Grades</a>
        <a class="nav" href="/exchange">Exchange Rate</a>
        <a class="nav" href="/input">Input</a>

        <% if (login) { %>
            <a class="nav" href="/login">Login</a>
        <% } else { %>
            <a class="nav" onclick="click_to_logout()">Logout</a>
        <% } %>
</header>
<script src="js/script_logout.js"></script>